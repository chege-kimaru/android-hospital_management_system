<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.kevin.hospitaldatabase.AllDoctorsDetailsActivity"
    tools:showIn="@layout/app_bar_all_doctors_details">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:     "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:   "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field:        "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldDoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Of Birth:   "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorDoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldIdNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID number:        "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorIdNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doctorFieldReportDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Date:      "
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorReportDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff670adc"
            android:textSize="30sp"
            android:textStyle="italic"/>

    </LinearLayout>

</LinearLayout>
